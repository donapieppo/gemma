<%= dm_form_for @thing, title: "Caratteristiche dell'articolo" do |f| %>
  <%= f.dm_error_notification %>  
  <%= f.association :group, collection: current_organization.groups.order(:name), include_blank: false %>
  <%= f.input :name %>
  <%= f.input :description, hint: "Campo opzionale" %>
  <%= f.input :minimum, hint: t(:minimum_description).html_safe %>

  <% if @thing.new_record? %>  
    <% if @locations.size > 1 %>
      <%= f.association :locations, collection: @locations, as: :check_boxes %>  
    <% end %>
    <div class='col-sm-9 offset-sm-3 my-2'>
      <label>
      <input type="checkbox" name="insert_barcodes" class="form-check-input"/> 
        Voglio inserire i codici a barre dopo aver salvato l'articolo.
      </label>
    </div>
  <% end %>

  <%= f.submit %>
<% end %>


