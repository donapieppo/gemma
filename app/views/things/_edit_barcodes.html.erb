<div class="dm-card">
  <div class="dm-card-title">
    Codici a Barre <%= popover_help 'Codici a Barre', "Ogni articolo puÃ² essere identificato da diversi codici a barre." %>
  </div>
  <div class="dm-card-body">
    <% if @barcodes.size > 0 %>  
      <ul class="list-group mb-3">
        <% @barcodes.each do |b| %>  
          <li class="list-group-item py-1"> 
            <%= b.name %> 
            <span class="float-end">
              <%= link_to_delete "", barcode_path(b) %>
              <%= link_to dm_icon('barcode'), barcode_path(b) %>
            </span>
          </li>
        <% end %>
      </ul>
    <% else %>  
      <p>Non sono al momento associati codici a barre a questo materiale.</p>
    <% end %>

    <p>
    <%= link_to_new "Aggiungi codice a barre", new_thing_barcode_path(@thing) %> <br/>
    <% if @barcodes.size == 0 %>
      <%= button_to "Genera un codice a barre interno a gemma", generate_barcode_thing_path(@thing), class: 'btn btn-warning mt-2' %>
    <% end %>
    </p>
  </div>
</div>

