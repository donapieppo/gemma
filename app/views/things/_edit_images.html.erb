<%= dm_form_for [@thing, @image], html: { multipart: true }, title: 'Immagini (ogni articolo puÃ² essere assciato a una immagine)' do |form| %>
  <div class="image-list">
    <% @thing.images.each do |image| %>  
      <div class="image">
        <%= image_tag image.photo.variant(resize_to_limit: [300, 300]) %>
      </div>
      <p><%= link_to_delete image_path(image) %></p>
    <% end %>
  </div>
  <input id="image_photo" type="file" name="image[photo]"></input>
  <input type="submit" class="image_submit" value="Aggiungi immagine"></input>
  </fieldset>
<% end %>

<%= javascript_tag do %>  
  $(document).ready(function() {
    $("#image_photo").on('change', function() {
      $(".image_submit").attr('disabled', null);
    });
    $(".image_submit").attr('disabled', 'disabled');
  });
<% end %>




