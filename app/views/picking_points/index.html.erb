<h1>Punti di ritiro</h1>

<div class="centered">
  <%= link_to 'Nuovo punto di ritiro', new_picking_point_path, class: 'btn btn-primary' %>  
</div>

<div class="list-group my-2">
  <% @picking_points.each do |picking_point| %>
    <%= link_to [:edit, picking_point], class: "list-group-item list-group-item-action" do %>
      <%= picking_point %>
    <% end %>
  <% end %>
</div>

<% if policy(current_organization).manage? %>
  <%= link_to dm_icon('wrench', text: "Altre configurazioni"), current_organization_edit_path %>
<% end %>
