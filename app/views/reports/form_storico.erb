<%= report_layout title: "Storico movimenti" do %>  
  <%= simple_form_for :report, url: storico_reports_path, data: { turbo: false } do |f| %>
    <%= render Report::FormatComponent.new(f) %>  
    <%= render Report::PeriodComponent.new(f) %>  

    <%= f.input :thing_id, collection: @things, label: 'Materiale', include_blank: 'Qualsiasi' %>
    <%= f.input :only_loads, as: :boolean, label: 'Mostra solo carichi'  %>  

    <%= f.submit "Scarica", input_html: { data: { disable_with: false }} %>
  <% end %>
<% end %>
