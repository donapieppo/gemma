<%= report_layout title: "Ricevute" do %>  
  <%= simple_form_for :report, url: receipt_reports_path, data: { turbo: false } do |f| %>
    <%= f.input :start_date, as: :date, html5: true, label: 'data', input_html: { value: Date.today } %>  
    <%= f.input :user_id, collection: @cache_users, label_method: :cn_militar, label: "Scarichi a nome dell'utente", include_blank: false %>  

    <%= f.submit "Scarica", input_html: { data: { disable_with: false }} %>
  <% end %>
<% end %>
