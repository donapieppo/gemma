<%= dm_form_for @delegation, title: "Nuova delega in #{current_organization.name}" do |f| %>  
  <%= f.dm_error_notification %>

  <%= f.input :delegator_upn, required: true %>
  <%= f.input :delegate_upn, required: true %>
  <% if (departments = current_organization.departments).any? %>
    <%= f.association :department, collection: departments, as: :radio_buttons %>
  <% end %>
  <% if (picking_points = current_organization.picking_points).any? %>
    <%= f.association :picking_point, collection: picking_points, as: :radio_buttons %>
  <% end %>

  <%= f.submit %>  
<% end %>
