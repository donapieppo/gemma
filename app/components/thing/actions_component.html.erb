<% active_class = "class='active'".html_safe %>

<ul id="thingmenu" role="tablist" class="mb-5">
  <li <%= active_class if (@controller == 'unloads' && @action == 'new') %>>
    <%= link_to '<i class="fa fa-fw fa-arrow-circle-down fa-2xl"></i> scarica'.html_safe, new_thing_unload_path(@thing) %> 
  </li>
  <li <%= active_class if (['loads', 'stocks'].include?(@controller) && @action == 'new') %>>
    <%= link_to '<i class="fa fa-fw fa-plus-circle fa-2xl"></i> carica'.html_safe, new_thing_load_path(@thing) %> 
  </li>
  <li <%= active_class if (['takeovers'].include?(@controller) && @action == 'new') %>>
    <%= link_to '<i class="fa fa-fw fa-reply fa-2xl"></i> resa'.html_safe, new_thing_takeover_path(@thing), title: "registrazione presa consegna" %> 
  </li>
  <li <%= active_class if (@controller == 'moves' && @action == 'index') %>>
    <%= link_to '<i class="fa fa-fw fa-list fa-2xl"></i> storico'.html_safe, thing_moves_path(@thing), title: "visualizza, modifica ed elimina carichi e scarichi" %>
  </li>
  <li <%= active_class if (@controller == 'things' && @action == 'edit') %>>
    <%= link_to '<i class="fa fa-fw fa-edit fa-2xl"></i> modifica'.html_safe, edit_thing_path(@thing), title: "modifica le caratteristiche dell'articolo" %> 
  </li>
  <li>
    <%= button_to '<i class="fa fa-fw fa-trash-alt fa-2xl"></i> elimina'.html_safe, thing_path(@thing), method: :delete, form: { data: { 'turbo-confirm': 'Sicuro di volere cancelare il materiale?'}}, title: "elimina l'articolo" %> 
  </li>
</ul>



