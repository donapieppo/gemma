<%= helpers.dm_card title: 'Fornitore' do %>
  <% form_with url: search_ddts_path do |f| %>
    <%= f.text_field "supplier", size: 10 %>
    <%= f.submit 'Cerca', class: "btn btn-sm" %>
  <% end %>
<% end %>

<%= helpers.dm_card title: 'Num. Record' do %>
  <% form_with url: search_ddts_path do  |f| %>
    <%= f.text_field "number", size: 10 %>
    <%= f.submit 'Cerca', class: "btn btn-sm" %>
  <% end %>
<% end %>

<%= helpers.dm_card title: 'Dettaglio (n. ddt/fatt)' do %>
  <% form_with url: search_ddts_path do |f| %>
    <%= f.text_field "like", size: 10 %>
    <%= f.submit 'Cerca', class: "btn btn-sm" %>
  <% end %>
<% end %>

<%= helpers.dm_card title: 'Ricerca per data documento' do %>
  <% form_with url: search_ddts_path do |f| %>
    <div class="row mb-3">
      <div class="col-sm-2">
        <label class="control-label">dal:</label>
      </div>
      <div class="col-sm-10">
        <%= text_field_tag :datainizio, l(Date.today - 1.month, format: :date_html5), type: 'date', class: 'form-control' %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-sm-2">
        <label class="control-label">al:</label>
      </div>
      <div class="col-sm-10">
        <%= text_field_tag :datafine, l(Date.today, format: :date_html5), type: 'date', class: 'form-control' %>
      </div>
    </div>
    <%= f.submit 'Cerca', class: "btn btn-sm" %>
  <% end %>
<% end %>

<%= helpers.dm_card title: 'Rif. CIA - Nr. Prot.' do %>
  <% form_with url: search_cia_ddts_path do |f| %>
    <div class="my-2">
      <%= f.select "ycia", options_for_select(@years_cia), {include_blank: false, class: 'form-select select'} %>
    </div>
    <div>
      <%= f.text_field "ncia", size: 10, class: 'form-control' %> 
      <%= f.submit 'Cerca', class: "btn btn-sm" %>
    </div>
  <% end %>
<% end %>


