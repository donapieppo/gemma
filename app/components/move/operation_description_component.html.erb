<% if @operation.is_load? %>
  carico da ddt <%= @operation.ddt.number %>
<% elsif @operation.is_unload? || @operation.is_takeover? %>
  <% if @operation.recipient %>
    <%= @operation.recipient.upn %> 
    <small class='text-muted'>(da <%= @operation.user.upn %>)</small>
  <% else %>
    <%= @operation.user.upn %>
  <% end %>
  <% if @operation.is_booking? %>
    <small>(da prenotazione)</small>
  <% end %>
<% elsif @operation.is_stock? %>
  giacenza iniziale
<% elsif @operation.is_shift? %>
  <b>spostamento</b> <small>(registrato da <%= @operation.user.upn %></small>
<% elsif @operation.is_price? %>
  &euro; cambio prezzo
<% end %>

